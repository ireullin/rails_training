
<% record_login_history %>
<%= form_tag( full_url("top/varify")) do %>
  	
	<div class="form-group" style="display: none;">
		<%= label_tag 'url' %>
		<%= text_field_tag('url', request.env['HTTP_REFERER'], class: "form-control" ) %>
	</div>

  	<div class="form-group">
		<%= label_tag 'account' %>
		<%= text_field_tag('account', nil, class: "form-control" ) %>
	</div>
  	
  	<div class="form-group">
		<%= label_tag 'password' %>
		<%= password_field_tag('password', nil, class: "form-control" ) %>
	</div>

	<%= submit_tag "login", class: "btn btn-default" %>

<% end %>