<div class="container-fluid">
  	<div class="page-header">
    	<h1>登入紀錄</h1>
	</div>

	
	<div>
		
		<%= kaminari_with_dropdown(@varify) %>

		<table class="table table-hover table-striped">
		    <thead>
		    	<tr>
		        	<th>account</th>
		        	<th>password</th>
		        	<th>result</th>
		        	<th>ip</th>
		        	<th>agent</th>
		        	<th>update date</th>
		        	<th>created date</th>
		      	</tr>
		    </thead>

		    <tbody>
		    	<% result_spec = ['success','failed'] %>
		      	<% @varify.each do |row| %>
		        	<tr>
		          	<td><%= row.account %></td>
		          	<td><%= row.password %></td>
		          	<td><%= result_spec[row.result] %></td>
		          	<td><%= row.ip %></td>
		          	<td><%= row.agent %></td>
		          	<td><%= row.updated_at.localtime.strftime("%Y-%m-%d %H:%M:%S") %></td>
		          	<td><%= row.created_at.localtime.strftime("%Y-%m-%d %H:%M:%S") %></td>
		        	</tr>
		      	<% end %>
		    </tbody>
		</table>

		<%= kaminari_with_dropdown(@varify, dropdown: false) %>

	</div>

	
</div>
