<div class="container-fluid">
  	<div class="page-header">
    	<h1>瀏覽紀錄</h1>
	</div>

	
	<div>
		
		<%= kaminari_with_dropdown(@histories) %>

		<table class="table table-hover table-striped">
		    <thead>
		    	<tr>
		        	<th>ip</th>
		        	<th>owner</th>
		        	<th>reason</th>
		        	<th>path</th>
		        	<th>agent</th>
		        	<th>created date</th>
		      	</tr>
		    </thead>

		    <tbody>
		      	<% @histories.each do |row| %>
		        	<tr>
		          	<td><%= row.ip %></td>
		          	<td><%= row.name %></td>
		          	<td><%= row.reason %></td>
		          	<td><%= row.path %></td>
		          	<td><%= row.agent %></td>
		          	<td><%= row.created_at.localtime.strftime("%Y-%m-%d %H:%M:%S") %></td>
		        	</tr>
		      	<% end %>
		    </tbody>
		</table>

		<%= kaminari_with_dropdown(@histories, dropdown: false) %>

	</div>

	
</div>
